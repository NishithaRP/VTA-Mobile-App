                android:textColor="@color/black"
                android:textSize="18dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:onClick="expandaf"
        app:cardCornerRadius="28dp"
        app:cardElevation="18dp"
        app:contentPadding="10dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:id="@+id/af_layout"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aluminium Fabricator"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/af_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/af_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:onClick="expandbk"
        app:cardCornerRadius="28dp"
        app:cardElevation="18dp"
        app:contentPadding="10dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:id="@+id/bk_layout"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Baker"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bk_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/bk_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:onClick="expandck"
        app:cardCornerRadius="28dp"
        app:cardElevation="18dp"
        app:contentPadding="10dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:id="@+id/ck_layout"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Baker"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ck_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
